<div class="flex justify-center min-h-screen bg-gradient-to-r from-gray-700 via-gray-900 to-black bg-opacity-60 backdrop-blur-lg">
  <div class="w-full max-w-4xl px-4 py-16">
    <p class="text-green-600 mb-4"><%= notice %></p>

    <div class="container mx-auto px-4 py-3 flex flex-wrap justify-between items-center">
      <h1 class="text-2xl font-semibold text-gray-800 dark:text-gray-100">Users</h1>
      <%= link_to "Criar Usuário", new_user_path, class: "inline-block px-4 py-2 bg-blue-600 text-white font-semibold rounded hover:bg-blue-700" %>
    </div>

    <div class="relative overflow-x-auto shadow-md sm:rounded-lg">
      <table class="w-full text-sm text-left text-gray-800 dark:text-gray-400">
        <thead class="text-xs text-gray-700 uppercase bg-gray-200 dark:bg-gray-700 dark:text-gray-300">
          <tr>
            <th scope="col" class="px-6 py-3">Username</th>
            <th scope="col" class="px-6 py-3">First Name</th>
            <th scope="col" class="px-6 py-3">Last Name</th>
            <th scope="col" class="px-6 py-3">Email</th>
            <th scope="col" class="px-6 py-3">Actions</th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
            <tr class="odd:bg-white even:bg-gray-50 dark:odd:bg-gray-800 dark:even:bg-gray-700 border-b dark:border-gray-600">
              <td class="px-6 py-4 font-medium text-gray-900 dark:text-white"><%= user.username %></td>
              <td class="px-6 py-4"><%= user.first_name %></td>
              <td class="px-6 py-4"><%= user.last_name %></td>
              <td class="px-6 py-4"><%= user.email %></td>
              <td class="px-6 py-4 space-x-4">
                <div class="flex flex-col justify-center">
                  <%= link_to "Edit", edit_user_path(user), class: "font-medium text-yellow-600 dark:text-yellow-400 hover:underline" %>
                  <%= button_to "Delete", user, method: :delete, data: { confirm: "Are you sure?" }, class: "font-medium text-red-600 dark:text-red-400 hover:underline" %>
                </div>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>

    <div class="flex justify-center mt-6 space-x-2">
      <% if @users.current_page > 1 %>
        <%= link_to 'Anterior', users_path(page: @users.current_page - 1), 
          class: "px-4 py-2 rounded-lg transition-all duration-300 text-white bg-blue-500 hover:bg-blue-600 dark:bg-blue-700 dark:hover:bg-blue-800 shadow-lg" %>
      <% end %>

      <% 1.upto(@users.total_pages) do |page| %>
        <%= link_to page, users_path(page: page), 
          class: "px-4 py-2 rounded-lg transition-all duration-300 #{page == @users.current_page ? 'text-white bg-gradient-to-r from-blue-500 to-purple-500 shadow-lg dark:from-blue-600 dark:to-purple-600' : 'text-gray-800 bg-gray-200 hover:bg-gray-300 dark:bg-gray-700 dark:hover:bg-gray-600 dark:text-gray-300 shadow-sm'}" %>
      <% end %>

      <% if @users.current_page < @users.total_pages %>
        <%= link_to 'Próximo', users_path(page: @users.current_page + 1), 
          class: "px-4 py-2 rounded-lg transition-all duration-300 text-white bg-blue-500 hover:bg-blue-600 dark:bg-blue-700 dark:hover:bg-blue-800 shadow-lg" %>
      <% end %>
    </div>
  </div>
</div>
