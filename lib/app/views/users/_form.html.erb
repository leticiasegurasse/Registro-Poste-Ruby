<%= form_with(model: user, local: true) do |form| %>
  <% if user.errors.any? %>
    <div class="mb-4 p-4 text-red-600 bg-red-100 border border-red-400 rounded dark:bg-red-700 dark:border-red-500">
      <h2 class="font-bold"><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>
      <ul class="list-disc pl-5">
        <% user.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-5">
    <%= form.label :username, class: "block mb-2 text-sm font-medium text-gray-900 dark:text-gray-100" %>
    <%= form.text_field :username, class: "block w-full p-2 border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-blue-500 dark:border-gray-600 dark:bg-gray-700 dark:text-gray-200" %>
  </div>

  <div class="mb-5">
    <%= form.label :first_name, class: "block mb-2 text-sm font-medium text-gray-900 dark:text-gray-100" %>
    <%= form.text_field :first_name, class: "block w-full p-2 border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-blue-500 dark:border-gray-600 dark:bg-gray-700 dark:text-gray-200" %>
  </div>

  <div class="mb-5">
    <%= form.label :last_name, class: "block mb-2 text-sm font-medium text-gray-900 dark:text-gray-100" %>
    <%= form.text_field :last_name, class: "block w-full p-2 border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-blue-500 dark:border-gray-600 dark:bg-gray-700 dark:text-gray-200" %>
  </div>

  <div class="mb-5">
    <%= form.label :email, class: "block mb-2 text-sm font-medium text-gray-900 dark:text-gray-100" %>
    <%= form.text_field :email, class: "block w-full p-2 border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-blue-500 dark:border-gray-600 dark:bg-gray-700 dark:text-gray-200" %>
  </div>

  <div class="mb-5">
    <%= form.label :password, class: "block mb-2 text-sm font-medium text-gray-900 dark:text-gray-100" %>
    <%= form.password_field :password, class: "block w-full p-2 border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-blue-500 dark:border-gray-600 dark:bg-gray-700 dark:text-gray-200" %>
  </div>

  <div class="mb-5">
    <%= form.label :password_confirmation, class: "block mb-2 text-sm font-medium text-gray-900 dark:text-gray-100" %>
    <%= form.password_field :password_confirmation, class: "block w-full p-2 border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-blue-500 dark:border-gray-600 dark:bg-gray-700 dark:text-gray-200" %>
  </div>

  <div>
    <%= form.submit 'Create User', class: "w-full p-2 mt-4 text-white bg-blue-500 rounded hover:bg-blue-600 focus:outline-none focus:ring-2 focus:ring-blue-500" %>
  </div>
<% end %>
