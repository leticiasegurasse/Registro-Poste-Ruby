<div class="flex justify-center min-h-screen bg-gray-100 dark:bg-gray-900">
  <div class="w-full max-w-lg p-6 bg-white dark:bg-gray-800 rounded-lg shadow-lg">
    <h1 class="text-2xl font-bold text-gray-800 dark:text-gray-100 mb-4">User Details</h1>
    <div class="mb-4">
      <p class="text-gray-700 dark:text-gray-300">
        <strong>Username:</strong> <%= @user.username %>
      </p>
    </div>
    <div class="mb-4">
      <p class="text-gray-700 dark:text-gray-300">
        <strong>First name:</strong> <%= @user.first_name %>
      </p>
    </div>
    <div class="mb-4">
      <p class="text-gray-700 dark:text-gray-300">
        <strong>Last name:</strong> <%= @user.last_name %>
      </p>
    </div>
    <div class="mb-4">
      <p class="text-gray-700 dark:text-gray-300">
        <strong>Email:</strong> <%= @user.email %>
      </p>
    </div>
    <div class="mt-6">
      <%= link_to "Edit User", edit_user_path(@user), class: "inline-block text-blue-600 hover:underline mr-4" %>
      <%= link_to "Back to users", users_path, class: "inline-block text-blue-600 hover:underline" %>
    </div>
  </div>
</div>
